    "@types/sanitize-html": "^2.9.3",
    "conventional-github-releaser": "3.1.3",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "cypress": "^12.12.0",
    "playwright-webkit": "^1.33.0",
    "prettier": "^2.6.2",
    "rimraf": "^5.0.5",
    "sass": "^1.54.3",
    "sass-loader": "^12.6.0",
    "standard-version": "^9.3.2",
    "style-loader": "1.3.0",
